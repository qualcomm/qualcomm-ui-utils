{
  "name": "@qualcomm-ui/cli",
  "version": "1.0.0",
  "description": "Dev utils and scripts in a convenient CLI",
  "author": "Ryan Bower",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "qui-cli": "./lib/cli.cjs"
  },
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "build": "run-s clean compile",
    "clean": "shx rm -rf dist",
    "compile": "run-p compile:cli compile:types",
    "compile:cli": "tsx build.ts --mode production",
    "compile:types": "tsc -b tsconfig.lib.json --force",
    "dev": "run-p watch:cli watch:types",
    "watch:cli": "tsx build.ts --mode development --watch",
    "watch:types": "tsc -b tsconfig.lib.json -w --preserveWatchOutput --force",
    "lint": "eslint --quiet"
  },
  "devDependencies": {
    "@clack/prompts": "1.0.0-alpha.6",
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "dayjs": "^1.11.13",
    "esbuild": "^0.25.8",
    "vitest": "^3.2.4"
  }
}
