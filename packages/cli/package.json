{
  "name": "@qualcomm-ui/cli",
  "version": "1.0.6",
  "description": "Dev utils and scripts in a convenient CLI",
  "author": "Ryan Bower",
  "license": "BSD-3-Clause-Clear",
  "repository": "https://github.com/qualcomm/qualcomm-ui",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "bin": {
    "qui-cli": "./lib/cli.cjs"
  },
  "files": [
    "dist",
    "lib"
  ],
  "types": "./dist/modules/index.d.ts",
  "scripts": {
    "build": "run-s clean compile",
    "clean": "shx rm -rf dist",
    "compile": "run-p compile:cli compile:types",
    "compile:cli": "tsx build.ts --mode production",
    "compile:types": "tsc -b tsconfig.lib.json --force",
    "dev": "run-p watch:cli watch:types",
    "watch:cli": "tsx build.ts --mode development --watch",
    "watch:types": "tsc -b tsconfig.lib.json -w --preserveWatchOutput --force",
    "lint": "eslint --quiet",
    "prepublishOnly": "node lib/cli.cjs pre-publish",
    "postpublish": "node lib/cli.cjs post-publish"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.3",
    "dayjs": "^1.11.19",
    "esbuild": "^0.25.8",
    "vitest": "^4.0.8"
  }
}
